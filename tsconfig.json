{
  "include": ["src/**/*"],
  "compilerOptions": {
    "module": "CommonJS",
    // "lib": ["ES2015"],
    "target": "ES2017",
    "outDir": "dist",
    "rootDir": "src",
    "importHelpers": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    }
  }
}
