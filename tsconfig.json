{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es6"],
    "importHelpers": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/test": ["test/*"],
      "*": ["src/*", "*"]
    }
  },
  "include": ["src/**/*"]
}
